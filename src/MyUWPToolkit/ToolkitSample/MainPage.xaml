<Page
    x:Class="ToolkitSample.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ToolkitSample"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" >
        <ListView x:Name="listView" ItemClick="ListView_ItemClick" IsItemClickEnabled="True" >
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="5" Background="#fff" BorderThickness="1" BorderBrush="#d6d6d6">
                        <TextBlock Text="{Binding}" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
            <x:String>ImageTool</x:String>
            <x:String>PullToRefreshControl</x:String>
            <!--<x:String>CropImageControl</x:String>-->
            <x:String>ColumnChart</x:String>
            <!--<x:String>VirtualizedVariableSizedGridView</x:String>-->
            <!--<x:String>CustomKeyboardPage</x:String>-->
            <!--<x:String>WIN2DPage</x:String>-->
            <!--<x:String>DataGrid</x:String>-->
            <x:String>FlexGrid</x:String>
            <x:String>GroupListView</x:String>
            <x:String>ColorPicker</x:String>
            <x:String>AdvancedFlyout</x:String>
            <x:String>HightLightedRadioButton</x:String>
            <x:String>RadialMenu</x:String>
            <x:String>FillRowViewPanel</x:String>
            
            <x:String>Test</x:String>
            
        </ListView>
        <ContentControl x:Name="contentControl"/>
    </Grid>
</Page>
